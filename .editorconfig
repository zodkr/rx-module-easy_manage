[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{py,sh}]
indent_style = space
indent_size = 4

[*.{json,yml,md}]
indent_style = space
indent_size = 2

[*.{jsx,tsx,svelte,vue}]
indent_style = space
indent_size = 2
